doctype html
html lang="ja"
  head
    meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible"
    meta charset="utf-8"
    meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport"

    title
      = release_title(current_resource)

    - if current_resource.data.keyword
      meta name="keywords" content="#{current_resource.data.keyword}"

    - if current_resource.data.description
      meta name="description" content="#{current_resource.data.description}"

    == partial 'layouts/favicon'

    == stylesheet_link_tag :site

  body class="#{page_classes}"
    == partial 'layouts/header'

    main
      .container
        .columns
          .column.is-half.is-offset-one-quarter.content
            == yield

    == partial 'layouts/footer'
